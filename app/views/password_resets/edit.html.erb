<% provide(:title, "Reset Password - Change Password") %>
<div class="row">
  <div class="span6 offset3">
	<%= form_for @user, url: password_reset_path(params[:id]) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <%= render 'shared/password_fields', f: f %>
	  <%= submit_tag "Change Password", class: "btn btn-large btn-primary" %>
	<% end %>
  </div>
</div>
